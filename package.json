{
  "name": "monorepo",
  "version": "2.0.0",
  "description": "Monorepo for eligibility web and admin",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "check-types": "yarn workspaces foreach -pvi --exclude vuepress run check-types",
    "lint": "yarn workspaces foreach -pvi --exclude vuepress run lint",
    "test": "yarn workspaces foreach -pvi --exclude vuepress run test",
    "check-all": "yarn run prettier-check && yarn run lint && yarn run check-types && yarn run test",
    "admin": "yarn workspace admin",
    "web": "yarn workspace web",
    "docs": "yarn workspace vuepress",
    "admin:start": "yarn admin start",
    "web:start:e2e": "yarn web start:e2e",
    "docs:start": "yarn docs docs:dev",
    "start-api-on-ci": "node ./start-server",
    "cypress:web": "cd packages/cypress_e2e && yarn web:run",
    "cypress:web:open": "cd packages/cypress_e2e && yarn web:open",
    "cypress:web:record": "cd packages/cypress_e2e && yarn web:run --record --key bb1fc7df-6592-400c-8494-b553bf5527d6",
    "cypress:web:serve-and-test": "CYPRESS_IS_CI=true server-test 'start-api-on-ci' :8003 'web:start:e2e' :3000 'cypress:web'",
    "cypress:admin": "cd packages/cypress_e2e && yarn admin:run",
    "cypress:admin:open": "cd packages/cypress_e2e && yarn admin:open",
    "cypress:admin:serve-and-test": "server-test 'admin:start' :3001 'cypress:admin'",
    "download-schema": "cd scripts && yarn run download-schema",
    "generate-types": "cd scripts && yarn run generate-types",
    "update-from-gql": "yarn run download-schema && yarn run generate-types",
    "prettier-check": "prettier --check \"(apps|packages)/**/*.{js,jsx,ts,tsx}\"",
    "prettier-write": "prettier --write \"(apps|packages)/**/*.{js,jsx,ts,tsx}\"",
    "prettier-format-generated-types": "prettier --write \"./packages/data/**/*.ts\" --loglevel warn"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "babel-plugin-styled-components": "^1.12.0",
    "eslint": "^7.17.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "prettier": "^2.2.1",
    "start-server-and-test": "^1.12.0"
  },
  "resolutions": {
    "@auth0/auth0-react": "^1.3.0",
    "@apollo/client": "^3.3.6",
    "date-fns": "^2.16.1",
    "graphql": "^15.4.0",
    "i18next": "^19.8.4",
    "jest": "26.6.0",
    "react": "^17.0.1",
    "react-i18next": "^11.8.5",
    "react-dom": "^17.0.1",
    "react-dropzone": "^11.2.4",
    "react-router-dom": "^5.2.0",
    "typescript": "^4.1.3",
    "@testing-library/react": "^11.2.5"
  }
}
